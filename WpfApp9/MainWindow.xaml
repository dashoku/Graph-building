<Window x:Class="WpfApp9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Castle App" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Enter the number of vertices (n):" VerticalAlignment="Center" Margin="0 0 10 0"/>
            <TextBox x:Name="textBox" Width="100" VerticalAlignment="Center"/>
            <Button Content="Generate" Click="button_Click"/>
        </StackPanel>

        <Canvas x:Name="canvas" Grid.Row="1" Background="White"/>
    </Grid>
</Window>
